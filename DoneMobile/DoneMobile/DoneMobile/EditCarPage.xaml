<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoneMobile.EditCarPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Availability Time" />
            <DatePicker Date="{Binding AvailabilityTimeDate}"  />
            <TimePicker Time="{Binding AvailabilityTime}" />
            <Label Text="Availability Place" />
            <Entry Text="{Binding AvailabilityPlace}"  />
            <Button Text="Update" Clicked="Button_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>