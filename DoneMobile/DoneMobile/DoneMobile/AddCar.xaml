<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoneMobile.AddCar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Car model" />
            <Entry Text="{Binding CarModel}" />
            <Label Text="Weight capacity" />
            <Entry Text="{Binding WeightCapacity }" x:Name="WeightCapacity"    Keyboard="Numeric"/>
            <Label Text="Availability Time" />
            <DatePicker Date="{Binding AvailabilityTimeDate}"  />
            <TimePicker Time="{Binding AvailabilityTime}" />
            <Label Text="Availability Place" />
            <Entry Text="{Binding AvailabilityPlace}"  />
            <Button Text="Add car" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>